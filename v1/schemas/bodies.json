{
  "components": {
    "schemas": {
      "TenantResponse": {
        "description": "a tenant to be returned",
        "discriminator": {
          "propertyName": "type",
          "mapping": {
            "MOCK": "#/components/schemas/MockTenantResponse",
            "OPENID": "#/components/schemas/OpenIdTenantResponse",
            "SOF": "#/components/schemas/SofTenantResponse",
            "MDA": "#/components/schemas/MdaTenantResponse"
          }
        },
        "properties": {
          "id": {
            "$ref": "simple-types.json#/components/schemas/TenantId"
          },
          "name": {
            "type": "string"
          },
          "type": {
            "$ref": "simple-types.json#/components/schemas/TenantType"
          }
        },
        "required": [
          "id",
          "name",
          "type"
        ]
      },
      "MockTenantResponse": {
        "allOf": [
          {
            "$ref": "#/components/schemas/TenantResponse"
          }
        ]
      },
      "OpenIdTenantResponse": {
        "allOf": [
          {
            "$ref": "#/components/schemas/TenantResponse"
          },
          {
            "type": "object",
            "properties": {
              "scopes": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "issUrl": {
                "type": "string"
              },
              "redirectUrl": {
                "type": "string"
              },
              "clientId": {
                "type": "string"
              }
            },
            "required": [
              "scopes",
              "issUrl",
              "redirectUrl",
              "clientId"
            ]
          }
        ]
      },
      "SofTenantResponse": {
        "allOf": [
          {
            "$ref": "#/components/schemas/TenantResponse"
          },
          {
            "type": "object",
            "properties": {
              "scopes": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "issUrl": {
                "type": "string"
              },
              "redirectUrl": {
                "type": "string"
              },
              "clientId": {
                "type": "string"
              },
              "providerFhirIdFetchTypes": {
                "type": "string"
              },
              "defaultProviderFhirIdFetchType": {
                "type": "string"
              }
            },
            "required": [
              "scopes",
              "issUrl",
              "redirectUrl",
              "clientId",
              "providerFhirIdFetchTypes",
              "defaultProviderFhirIdFetchType"
            ]
          }
        ]
      },
      "MdaTenantResponse": {
        "allOf": [
          {
            "$ref": "#/components/schemas/TenantResponse"
          },
          {
            "type": "object",
            "properties": {
              "mdaEnvironment": {
                "type": "string"
              },
              "mdaDefaultEnvironment": {
                "type": "string"
              }
            }
          }
        ]
      },
      "ErrorResponse": {
        "title": "ErrorResponse",
        "description": "An error. Expect entries in the error field",
        "allOf": [
          {
            "type": "object",
            "properties": {
              "error": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "object",
                  "properties": {
                    "httpStatus": {
                      "type": "string"
                    },
                    "timestamp": {
                      "type": "string",
                      "format": "date-time"
                    },
                    "status": {
                      "description": "The numeric http error code",
                      "type": "integer"
                    },
                    "error": {
                      "description": "HTTP reason phrase",
                      "type": "string"
                    },
                    "exception": {
                      "description": "Name of the exception thrown, if any",
                      "type": "string"
                    },
                    "message": {
                      "description": "Short information about the error",
                      "type": "string"
                    },
                    "detail": {
                      "description": "Long information about the error",
                      "type": "string"
                    },
                    "stackTrace": {
                      "description": "Stack trace of error",
                      "type": "string"
                    }
                  },
                  "required": [
                    "status"
                  ]
                }
              }
            },
            "required": [
              "error"
            ]
          }
        ]
      }
    }
  }
}